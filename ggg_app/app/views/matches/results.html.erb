<h1>Results</h1>

<br>
<table>
  <tr>
    <th>Division</th>
    <th>Season</th>
    <th>Date</th>
    <th>Home Team</th>
    <th>Home goals </th>
    <th>Away goals </th>
    <th>Away Team</th>
    <th>HT Home goals</th>
    <th>HT Away goals</th>
    <th>Half time GoalsGalore</th>
    <th>Full time GoalsGalore</th>
  </tr>

<% @results.each do |match| %>
  <tr>
    <td><%= match.div %></td>
    <td><%= match.season %></td>
    <td><%= match.date.strftime('%d/%m/%y') %></td>
    <td><%= link_to match.hometeam.name, team_url(match.hometeam)%></td>
    <td><%= match.fthg %></td>
    <td><%= match.ftag %></td>
    <td><%= link_to match.awayteam.name, team_url(match.awayteam) %></td> 
    <td><%= match.hthg %></td>
    <td><%= match.htag %></td>
    <td><%= ht_goals(match) %></td>
    <td><%= ft_goals(match) %></td>
  </tr> 
<% end %>
</table>
