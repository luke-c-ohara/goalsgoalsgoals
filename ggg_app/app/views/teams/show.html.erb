<%= @team_page.name %>

<br><br>

<% @home_games.each do |game| %>
  <% if game.hthg.blank? %>
      <%= "" %>
  <% else %>
    <%= "Home" %>
    <%= game.fthg %>
    <%= "-" %>
    <%= game.ftag %>
    <%= game.awayteam.name %>
    <%= ft_goals(game) %>
   <% end %> 
<% end %>



<br><br>

<% @away_games.each do |game| %>
  <% if game.hthg.blank? %>
      <%= "" %>
  <% else %>
  <%= game.hometeam.name %>
  <%= game.fthg %>
  <%= "-" %>
  <%= game.ftag %>
  <%= "Away" %>
  <%= ft_goals(game) %>
  <% end %> 
<% end %>

<br><br>

<% @all_games.each do |game| %>
  <% if game.date <= Date.today %>
    <%= "" %>
  <% else %>
  <%= game.hometeam.name %>
  <%= "v" %>
  <%= game.awayteam.name %>
  <%= game.date.strftime('%d/%m/%y') %><br>
  <% end %>
<% end %>








